source "${ZEPHYR_BASE}/share/sysbuild/Kconfig"

menu "DTM application configuration"

config DTM_USB
        bool "DTM over USB CDC ACM class"
        select EXPERIMENTAL
        help
          Use USB instead of UART as the DTM interface. For nRF5340 the USB from application core
          is used as communication interface.

choice DTM_APP
        default DTM_APP_REMOTE_SHELL
	depends on ($(BOARD) = "nrf5340dk_nrf5340_cpunet")
        prompt "Remote application core image"

config DTM_APP_REMOTE_SHELL
        bool "Remote shell"

config DTM_APP_REMOTE_HCI
        bool "Remote HCI"

endchoice # DTM_APP

endmenu
